@model COCOApp.Models.User
@{
    ViewBag.Title = "View User Detail";
    Layout = "_LayoutStoreDashBoard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="">
    <meta name="description" content="">

</head>
<body>

    <div class="content">
        <!-- Form Start -->
        <div class="container-fluid pt-4 px-4">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/User/ViewList">Danh sách người dùng</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Thông tin người dùng</li>
                </ol>
            </nav>
            <form id="registerForm" action="" method="post">
                <div class="row">
                    <div class="col">
                        <div>
                            <h4 class="mb-4">Thông tin người dùng</h4>
                        </div>
                    </div>
                    <div class="w-100"></div>
                    <div class="col-xl-12">
                        <div class="bg-light rounded h-100 p-4">
                            <div class="mb-3">
                                <div class="form-group">
                                    <label asp-for="Username" class="required"> Tên tài khoản</label>
                                    <input asp-for="Username" class="form-control" placeholder="Nhập Tên tài khoản..." disabled />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-group">
                                    <label asp-for="Email" class="required">Email</label>
                                    <input asp-for="Email" class="form-control" placeholder="Nhập Email..." disabled />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-group">
                                    <label asp-for="Role" class="required">Loại tài khoản</label>
                                    <select asp-for="Role" class="form-select" disabled>
                                        @if (Model.Role==1)
                                        {
                                            <option value="1" selected>Admin</option>
                                            <option value="2">Người bán</option>
                                            <option value="3">Người mua</option>
                                        }
                                        else if(Model.Role==2)
                                        {
                                            <option value="1">Admin</option>
                                            <option value="2" selected>Người bán</option>
                                            <option value="3">Người mua</option>
                                        }
                                        else if (Model.Role == 3)
                                        {
                                            <option value="1">Admin</option>
                                            <option value="2">Người bán</option>
                                            <option value="3" selected>Người mua</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-group">
                                    <label asp-for="Status" class="required">Trạng thái</label>
                                    <select asp-for="Status" class="form-select" disabled>
                                        @if (Model.Status)
                                        {
                                            <option value="true" selected>Đã kích hoạt</option>
                                            <option value="false">Chưa kích hoạt</option>
                                        }
                                        else
                                        {
                                            <option value="true">Đã kích hoạt</option>
                                            <option value="false" selected>Chưa kích hoạt</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="w-100"></div>
                    <div class="col">
                        <div class="bg-light rounded h-100 p-4 text-center">
                            <a href="@Url.Action("ViewEdit", "User", new { userId = Model.Id })" class="btn btn-primary">Đến trang chỉnh sửa</a>
                            <a href="@Url.Action("ViewList", "User")" class="btn btn-danger">Quay lại</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- Form End -->
    </div>
    <!-- Content End -->
</body>
</html>
