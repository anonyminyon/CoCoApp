@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
</head>
<body>
    <!-- Forgot Password Start -->
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <div class="container-fluid">
            <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                    <form asp-controller="User" asp-action="ForgotPassword" method="post">
                        <div class="bg-light rounded p-4 my-4 mx-3 shadow">
                            <div class="text-center mb-4">
                                <img src="~/img/logo.png" alt="Logo" width="100" height="100" class="d-block mx-auto">
                                <h3 class="text-primary mt-3">CoCo</h3>
                            </div>
                            <div class="mb-4 text-center">
                                <label>Vui lòng nhập email của bạn</label>
                            </div>
                            <div class="form-group mb-4">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" name="toEmail" class="form-control" id="email" placeholder="Nhập email..." required>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary py-3 w-100 mb-3">Gửi</button>
                                <a href="~/Home/ViewSignIn" class="btn btn-danger py-3 w-100">Quay lại</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Forgot Password End -->
</body>
</html>
