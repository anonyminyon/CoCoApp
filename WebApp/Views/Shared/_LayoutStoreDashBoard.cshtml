@using Microsoft.AspNetCore.Http
@using COCOApp.Helpers
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    string activePage = ViewData["activePage"]?.ToString() ?? "1";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - COCOApp</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Site-specific CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- COCOApp Styles -->
    <link rel="stylesheet" href="~/COCOApp.styles.css" asp-append-version="true" />

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Fonts -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries -->
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Select2 CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Styles -->
    <link href="~/css/style.css" rel="stylesheet">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
    <!-- Additional Section for Custom Styles -->
    @RenderSection("Styles", false)
</head>

<body>
    @{

        User user = null;
        // Check if the user is logged in or not
        if (Context.Session.GetCustomObjectFromSession<User>("user") != null)
        {
            user = Context.Session.GetCustomObjectFromSession<User>("user");
        };

        var successMsg = Context.Session.GetString("SuccessMsg");
        var errorMsg = Context.Session.GetString("ErrorMsg");

        Context.Session.Remove("SuccessMsg");
        Context.Session.Remove("ErrorMsg");
    }

    @if (!string.IsNullOrEmpty(successMsg))
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                Swal.fire({
                    title: 'Success',
                    text: '@Html.Raw(successMsg)',
                    icon: 'success'
                });
            });
        </script>
    }

    @if (!string.IsNullOrEmpty(errorMsg))
    {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                Swal.fire({
                    title: 'Error',
                    text: '@Html.Raw(errorMsg)',
                    icon: 'error'
                });
            });
        </script>
    }
    <header>
        <!-- Navbar Start -->
        <nav class="navbar navbar-expand-lg bg-light navbar-light sticky-top px-4 py-0 shadow">
            <div class="container-fluid">
                <div class="navbar-nav align-items-center ms-auto">
                    @if (user != null)
                    {
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                                <img class="rounded-circle me-lg-2" src="~/img/user.jpg" alt="User" style="width: 40px; height: 40px;">
                                <span class="d-none d-lg-inline-flex">@user.Username</span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                                <a href="~/User/ViewProfile" class="dropdown-item">Thông tin cá nhân</a>
                                <a href="~/User/Logout" class="dropdown-item">Đăng xuất</a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="nav-item">
                            <a href="~/Home/ViewSignIn" class="nav-link">Đăng nhập</a>
                        </div>
                        <div class="nav-item">
                            <a href="~/Home/ViewRegisterStore" class="nav-link">Đăng ký</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
        <!-- Navbar End -->
    </header>

    <div class="container-fluid pt-4 px-4">
        <div class="row">
            <div class="col-md-3">
                <div class="sidebar pe-4 pb-3">
                    <nav class="navbar bg-light navbar-light ps-0 pe-0 shadow-sm">
                        <a href="#" class="navbar-brand mx-4 mb-3">
                            <h3 class="text-primary">
                                <i class="fa me-2"></i>DEVIMS
                            </h3>
                        </a>
                        <div class="navbar-nav" id="sidebar">
                            <a href="~/Customer/ViewList" class="nav-item nav-link @(activePage == "2" ? "active" : "")" title="Quản lý khách hàng">
                                <i class="fa fa-th me-2"></i>Quản lý khách hàng
                            </a>
                            <a href="~/Supplier/ViewList" class="nav-item nav-link @(activePage == "3" ? "active" : "")" title="Nhà cung cấp của tôi">
                                <i class="fa fa-th me-2"></i>Nhà cung cấp của tôi
                            </a>
                            <a href="~/Product/ViewList" class="nav-item nav-link @(activePage == "4" ? "active" : "")" title="Quản lý sản phẩm">
                                <i class="fa fa-keyboard me-2"></i>Quản lý sản phẩm
                            </a>
                            <a href="~/Order/ViewList" class="nav-item nav-link @(activePage == "5" ? "active" : "")" title="Quản lý đơn hàng xuất">
                                <i class="fa fa-shopping-cart me-2"></i>Quản lý đơn hàng xuất
                            </a>
                            <a href="~/ImportOrder/ViewList" class="nav-item nav-link @(activePage == "6" ? "active" : "")" title="Quản lý đơn hàng nhập">
                                <i class="fa fa-table me-2"></i>Quản lý đơn hàng nhập
                            </a>
                            <a href="~/Report/ViewCreate" class="nav-item nav-link @(activePage == "7" ? "active" : "")" title="Tổng kết">
                                <i class="fa fa-file me-2"></i>Tổng kết
                            </a>
                            <a href="~/Category/ViewList" class="nav-item nav-link @(activePage == "8" ? "active" : "")" title="Quản lý danh mục">
                                <i class="fa fa-tags me-2"></i>Quản lý danh mục
                            </a>
                            @if (user != null && user.Role == 1)
                            {
                                <a href="~/User/ViewList" class="nav-item nav-link @(activePage == "9" ? "active" : "")" title="Danh sách người dùng">
                                    <i class="fa fa-user me-2"></i>Danh sách người dùng
                                </a>
                            }
                        </div>
                    </nav>
                </div>
            </div>
            <div class="col-md-9 p-0 main-content">
                <main role="main" class="p-4">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/easing/easing.min.js"></script>
    <script src="~/lib/waypoints/waypoints.min.js"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Select2 JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <script src="~/microsoft/signalr//dist/browser/signalr.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
